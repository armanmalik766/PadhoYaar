{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": ".",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "server.ts",
        "models/**/*.ts",
        "services/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}